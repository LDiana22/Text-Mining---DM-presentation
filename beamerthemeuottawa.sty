\setbeamertemplate{frametitle}{%
	\vbox{
		\hspace*{0.15\paperwidth}
	\vbox{
		\vspace*{1ex}	
		\hbox{
			\begin{beamercolorbox}[wd=\facbarwidth, ht=\titleheight,left]{facbar}%
			\vfill%
			\end{beamercolorbox}%
			\vbox{%
				\begin{beamercolorbox}[wd=.75\paperwidth, ht=\titleheight, left]{frametitle}		
					\vbox{\vspace*{0.25em}%
					\parbox{\textwidth}{
						\usebeamerfont{frametitlefont}\insertsection
						\ifx\insertsubsection\empty 
						\else
						\;-\;\insertsubsection
						\fi
						\hspace*{\fill}\\
						\usebeamerfont{framesubtitlefont}\hspace*{1em} \insertframetitle}%
					\vspace*{0.25em}}%
				\end{beamercolorbox}%
			}%
		}%
	}%
	}%
}


